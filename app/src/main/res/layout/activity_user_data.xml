<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserDataActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="User Data"
        app:titleTextColor="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/welcomeTextValue"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:text="Welcome"
        android:textColor="#666666"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcomeTextValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/usernameTextValue"
        app:layout_constraintTop_toTopOf="@id/welcomeTextView"
        android:textColor="#666666"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/welcomeTextView"
        app:layout_constraintEnd_toStartOf="@id/usernameTextValue"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
        android:layout_marginTop="40dp"
        android:text="User Name"
        android:textColor="#666666"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/usernameTextValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/usernameTextView"
        app:layout_constraintTop_toTopOf="@id/usernameTextView"
        android:layout_marginStart="30dp"
        android:textColor="#666666"
        android:textStyle="bold" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>